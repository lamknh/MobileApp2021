<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        //음식 선택 화면
        <ImageButton
            android:id="@+id/back"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#ffffff"
            android:scaleType="fitCenter"
            android:src="@drawable/back"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

<!--    <LinearLayout-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content">-->
<!--        <ImageView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="100dp"-->
<!--            android:src="@drawable/logo"/>-->
<!--    </LinearLayout>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        >
<!--        <ImageView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="100dp"-->
<!--            android:src="@drawable/logo"/>-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="뭘 먹을까?"
            android:textSize="35sp"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:letterSpacing="-0.1"
            />
        <View
            android:layout_width="250dp"
            android:layout_height="4dp"
            android:background="#FFCC00"
            android:gravity="center"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        >
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/ko_food"
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:background="#ffffff"
                android:scaleType="fitCenter"
                android:src="@drawable/ko_food"
                tools:ignore="MissingConstraints,SpeakableTextPresentCheck"
                tools:layout_editor_absoluteX="45dp"
                tools:layout_editor_absoluteY="33dp" />

            <ImageButton
                android:id="@+id/snack"
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:background="#ffffff"
                android:scaleType="fitCenter"
                android:src="@drawable/snack"
                tools:ignore="MissingConstraints,SpeakableTextPresentCheck"
                tools:layout_editor_absoluteX="226dp"
                tools:layout_editor_absoluteY="33dp" />

            <ImageButton
                android:id="@+id/ch_food"
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:background="#ffffff"
                android:scaleType="fitCenter"
                android:src="@drawable/ch_food"
                tools:ignore="MissingConstraints,SpeakableTextPresentCheck"
                tools:layout_editor_absoluteX="45dp"
                tools:layout_editor_absoluteY="131dp" />

            <ImageButton
                android:id="@+id/jp_food"
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:background="#ffffff"
                android:scaleType="fitCenter"
                android:src="@drawable/jp_food"
                tools:ignore="MissingConstraints,SpeakableTextPresentCheck,SpeakableTextPresentCheck"
                tools:layout_editor_absoluteX="226dp"
                tools:layout_editor_absoluteY="131dp" />

            <ImageButton
                android:id="@+id/west_food"
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:background="#ffffff"
                android:scaleType="fitCenter"
                android:src="@drawable/west_food"
                tools:ignore="MissingConstraints,SpeakableTextPresentCheck"
                tools:layout_editor_absoluteX="45dp"
                tools:layout_editor_absoluteY="226dp" />

            <ImageButton
                android:id="@+id/fast_food"
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:background="#ffffff"
                android:scaleType="fitCenter"
                android:src="@drawable/fast_food"
                tools:ignore="MissingConstraints,SpeakableTextPresentCheck"
                tools:layout_editor_absoluteX="226dp"
                tools:layout_editor_absoluteY="226dp" />

            <ImageButton
                android:id="@+id/world_food"
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:background="#ffffff"
                android:scaleType="fitCenter"
                android:src="@drawable/world_food"
                tools:ignore="MissingConstraints,SpeakableTextPresentCheck"
                tools:layout_editor_absoluteX="45dp"
                tools:layout_editor_absoluteY="318dp" />

            <ImageButton
                android:id="@+id/dessert"
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:background="#ffffff"
                android:scaleType="fitCenter"
                android:src="@drawable/des"
                tools:ignore="MissingConstraints,SpeakableTextPresentCheck,SpeakableTextPresentCheck"
                tools:layout_editor_absoluteX="200dp"
                tools:layout_editor_absoluteY="300dp" />
        </GridLayout>
        <ImageButton
            android:id="@+id/recommend_btn"
            android:layout_width="280dp"
            android:layout_height="75dp"
            android:src="@drawable/recommend_btn"
            android:scaleType="fitCenter"
            android:background="#ffffff"
            android:paddingTop="10dp"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:src="@drawable/letter"
            android:scaleType="fitCenter"/>
    </LinearLayout>
</LinearLayout>