<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/worldcupback">
    //4강전
    <TextView
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:layout_width="414dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="음식 이상형 월드컵"
        android:textColor="#ffffff"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/cup"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="4강 1/4"
        android:textSize="34dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="40dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/leftFood1"
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:background="@drawable/tteokbokki"
            android:fontFamily="@font/nanumgothicextrabold"
            android:text="V"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1.6"
            android:textColor="@color/white"
            android:gravity="center|right"
            android:textSize="48dp"/>
        <TextView
            android:id="@+id/rightFood1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/ramen"
            android:fontFamily="@font/nanumgothicextrabold"
            android:text="S"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1.6"
            android:textColor="#F1C40F"
            android:gravity="center|left"
            android:textSize="48dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/leftFoodName1"
            android:layout_width="202dp"
            android:layout_height="match_parent"
            android:text="떡볶이"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="28dp"/>
        <TextView
            android:id="@+id/rightFoodName1"
            android:layout_width="202dp"
            android:layout_height="match_parent"
            android:text="라면"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="28dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageButton
            android:id="@+id/HomeButton2"
            android:layout_width="120dp"
            android:layout_height="75dp"
            android:background="#ffffff"
            android:scaleType="fitCenter"
            android:contentDescription="no"
            android:src="@drawable/home"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>
</LinearLayout>