<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="414dp"
        android:layout_height="wrap_content"
        android:background="@drawable/wordcup_top_banner">

        <TextView
            android:id="@+id/cup"
            android:layout_width="414dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/gugi"
            android:gravity="center|bottom"
            android:text="2강 1/2"
            android:textColor="@color/black"
            android:textSize="35dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/wordcup_bot_banner" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/leftFood1"
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:background="@drawable/tteokbokki"
            android:fontFamily="@font/nanumgothicextrabold"
            android:text="V"
            android:textColor="@color/white"
            android:gravity="center|right"
            android:textSize="48dp"/>
        <TextView
            android:id="@+id/rightFood1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/ramen"
            android:fontFamily="@font/nanumgothicextrabold"
            android:text="S"
            android:textColor="@color/white"
            android:gravity="center|left"
            android:textSize="48dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/leftFoodName1"
            android:layout_width="202dp"
            android:layout_height="match_parent"
            android:text="떡볶기"
            android:fontFamily="@font/nanumgothicextrabold"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="28dp"/>
        <TextView
            android:id="@+id/rightFoodName1"
            android:layout_width="202dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/nanumgothicextrabold"
            android:text="라면"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="28dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/HomeButton3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:scaleType="fitCenter"
            android:contentDescription="no"
            android:src="@drawable/home" />
    </LinearLayout>
</LinearLayout>